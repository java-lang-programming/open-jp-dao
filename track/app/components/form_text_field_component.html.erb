<div class="tw_mb-5">
  <div id="<%= @attribute %>_error" class="text-red-600 text-sm mb-1 <%= error_hidden_class %>">
    <p><%= @form_status[@attribute][:msg] %></p>
  </div>
  
  <label for="<%= @attribute %>" class="block text-gray-700 text-sm font-bold mb-2">
    <%= placeholder_text %>*
    <span id="<%= @attribute %>_ok" class="ml-2 text-green-500 <%= ok_hidden_class %>">OK</span>
  </label>
  
  <%= @form.text_field @attribute, 
      class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 #{border_color_class}", 
      placeholder: placeholder_text %>
</div>