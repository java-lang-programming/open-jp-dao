<script>

  /**
   * ヘッダーイベントの設定
   **/
  function setHeaderEventListener() {
    const mobileMenuButton = document.querySelector('[data-collapse-toggle="navbar-dropdown"]');
    const mobileMenu = document.getElementById('navbar-dropdown');

    mobileMenuButton.addEventListener('click', function() {
      mobileMenu.classList.toggle('hidden');
      mobileMenu.classList.toggle('block'); // hiddenクラスとblockクラスを切り替える
      const expanded = this.getAttribute('aria-expanded') === 'true' || false;
      this.setAttribute('aria-expanded', !expanded);
    });

    // ドロップダウンメニューの表示・非表示切り替え
    const dropdownButton = document.getElementById('dropdownNavbarLink');
    const dropdownMenu = document.getElementById('dropdownNavbar');

    dropdownButton.addEventListener('click', function() {
      dropdownMenu.classList.toggle('hidden');
      dropdownMenu.classList.toggle('block'); // hiddenクラスとblockクラスを切り替える
    });

    // ドロップダウンメニュー外をクリックしたら閉じる
    document.addEventListener('click', function(event) {
      if (!dropdownButton.contains(event.target) && !dropdownMenu.contains(event.target)) {
        dropdownMenu.classList.add('hidden');
        dropdownMenu.classList.remove('block');
      }
    });
  }

  // イベントの登録の呼び出し
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setHeaderEventListener();
    });
  } else {
    setHeaderEventListener();
  }

</script>
