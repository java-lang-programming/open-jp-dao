<% content_for :title do %>WanWan 取引種別登録<% end %>

<% content_for :header do %>
  <%= render "layouts/header", user: @user %>
<% end %>

<section>
<div class="bg-white py-24">
<%= form_with model: @transaction_type, url: transaction_types_path, data: { turbo: false }, class:"form_transaction" do |form|  %>

  <div class="tw_mb-5">
    <label for="name" class="form_label">名称*</label>
    <%= form.text_field :name, class: "form_input", placeholder: "名称", required: true %>
  </div>
  <div class="tw_mb-5">
    <label for="kind" class="form_label">取引種別*</label>
    <%= form.select :kind, @kinds.collect { |c| [c[:name], c[:id]] }, {}, { class: "form_input" } %>
  </div>
  <button type="submit" class="btn_submit">更新</button>
<% end %>
</div>
</section>
