<% content_for :title do %>WanWan ドル円外貨預金元帳 新規作成確認<% end %>

<% content_for :header do %>
  <%= render "layouts/header", user: @user %>
<% end %>

<p><%= @message %></p>

<%= form_with model: @dollar_yen_transaction, url: dollar_yen_transactions_path, data: { turbo: false }, class:"form_transaction" do |form|  %>
  <%= form.hidden_field :date %>
  <%= form.hidden_field :transaction_type, value: @dollar_yen_transaction.transaction_type.id %>
  <%= form.hidden_field :deposit_quantity %>
  <%= form.hidden_field :deposit_rate %>
  <button type="submit" class="btn_submit">実行する</button>
  <input type="button" class="btn_submit" value="実行しない"/>
<% end %>
