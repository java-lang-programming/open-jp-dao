<% content_for :title do %>WanWan ドル円外貨預金元帳<% end %>

<% content_for :header do %>
  <%= render "layouts/header", user: @user, notification: @notification %>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

