<% content_for :title do %>WanWan ドル円外貨預金元帳 新規作成<% end %>

<% content_for :header do %>
  <%= render "layouts/header", user: @user %>
<% end %>

<%= form_with model: @dollar_yen_transaction, url: create_confirmation_dollar_yen_transactions_path, class:"form_transaction" do |form|  %>

  <div class="tw_mb-5">
    <label class="form_label">日付*</label>
    <%= form.text_field :date, class: "form_input", id: "default-datepicker", placeholder: "Select date", required: true %>
  </div>
  <div class="tw_mb-5">
    <label for="transaction_kind" class="form_label">取引種別*</label>
    <%= form.select :transaction_type, @transaction_types.collect { |c| [c.name, c.id] }, {}, { class: "form_input" } %>
  </div>
  <div class="tw_mb-5">
    <!-- エラーとOKの場合のcssを作成する -->
    <label for="en_dollar_value" class="form_label">数量米ドル*</label>
    <%= form.text_field :deposit_quantity, class: "form_input", id: "default-datepicker", placeholder: "預入数量米ドル", required: true %>
  </div>
  <div class="tw_mb-5">
    <label for="jp_en_rate" class="form_label">レート* </label>
    <%= form.text_field :deposit_rate, class: "form_input", id: "default-datepicker", placeholder: "預入レート", required: true %>
  </div>
  <div class="form_checkbox_section">
    <!-- flex items-center  -->
    <div class="h-5">
      <input id="auto_rate" type="checkbox" value="" class="form_checkbox" />
    </div>
    <label for="auto_rate" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">ドル円レート自動反映</label>
  </div>
  <div class="tw_mb-5">
    <label for="jp_en" class="form_label">日本円</label>
    <input type="text" id="jp_en" class="form_input form_input_ng" required />
  </div>
  <button type="submit" class="btn_submit">登録</button>
<% end %>


