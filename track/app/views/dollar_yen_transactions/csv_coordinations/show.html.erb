<% content_for :title do %>WanWan <%= t('views.dollar_yen_transactions.index') %><% end %>

<% content_for :header do %>
  <%= render "layouts/header", user: @user, notification: @notification %>
<% end %>

<% if flash[:notice] %>
  <section class="bg-white py-4">
    <div class="flex">
      <p class="mx-auto font-bold text-red-500"><%= notice %></p>
    </div>
  </section>
<% end %>

<div class="p-4 md:p-8 bg-white min-h-screen">
  <div class="max-w-6xl mx-auto mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-800 text-center mb-4">
      取引一覧
    </h1>

    <div class="flex justify-end gap-2">
      <button class="bg-white border border-gray-300 hover:bg-gray-100 text-gray-700 font-semibold py-2 px-4 rounded shadow-sm transition text-sm md:text-base">
        CSV登録
      </button>
      <%= link_to "+ 新規登録", new_dollar_yen_transactions_csv_coordination_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow-sm transition text-sm md:text-base" %>
    </div>
  </div>

  <div class="max-w-6xl mx-auto">

    <div class="hidden md:block bg-white shadow-md rounded-lg overflow-hidden border border-gray-200">
      <table class="w-full text-left border-separate border-spacing-0">
        <thead class="bg-gray-100 border-b">
        <tr>
          <th class="px-6 py-4 text-gray-600 font-semibold w-5/12 border-b">内容</th>
          <th class="px-6 py-4 text-gray-600 font-semibold w-5/12 border-b text-center">取引種別</th>
          <th class="px-6 py-4 text-gray-600 font-semibold w-2/12 border-b text-right">操作</th>
        </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
        <% @external_service_transaction_types.each_with_index do |external_service_transaction_type| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 text-gray-800 break-all">オフィス家賃 1月分</td>
            <td class="px-6 py-4 text-center">
              <span class="inline-block px-3 py-1 text-xs font-medium bg-red-100 text-red-700 rounded-full">支出</span>
            </td>
            <td class="px-6 py-4 text-right space-x-3">
              <button class="text-blue-600 hover:text-blue-800 font-medium text-sm">更新</button>
              <button class="text-red-600 hover:text-red-800 font-medium text-sm">削除</button>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<% content_for :footer do %>
  <%= render "layouts/footer" %>
<% end %>